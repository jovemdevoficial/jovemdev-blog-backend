{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Posts",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "authors": {
      "via": "posts",
      "collection": "authors",
      "dominant": true
    },
    "category": {
      "model": "categories",
      "via": "posts"
    },
    "tags": {
      "collection": "tags",
      "via": "posts",
      "dominant": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true,
      "maxLength": 150,
      "minLength": 50
    },
    "seo": {
      "type": "text",
      "required": true
    }
  }
}
